{
    "name": "vasildakov/specification",
    "description": "Specification Design Pattern",
    "type": "library",
    "homepage": "https://github.com/vasildakov/specification",
    "license": "MIT",
    "authors": [
        {
            "name": "Vasil Dakov",
            "email": "vasildakov@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3"
    },
    "autoload": {
        "psr-4": {
            "VasilDakov\\Specification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VasilDakov\\SpecificationTests\\": "tests/"
        }
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "*",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.5",
        "psalm/plugin-phpunit": "*",
        "squizlabs/php_codesniffer": "*",
        "symfony/var-dumper": "^8.0",
        "theseer/phpdox": "*",
        "vimeo/psalm": "*"
    },
    "config": {
        "platform": {
            "php": "8.4.13"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
