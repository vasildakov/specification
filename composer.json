{
    "name": "vasildakov/specification",
    "description": "Specification Design Pattern",
    "type": "library",
    "homepage": "https://github.com/vasildakov/specification",
    "license": "MIT",
    "authors": [
        {
            "name": "Vasil Dakov",
            "email": "vasildakov@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Vasildakov\\Specification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vasildakov\\SpecificationTests\\": "tests/"
        }
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "dev-master",
        "phpmd/phpmd": "dev-master",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "dev-master",
        "squizlabs/php_codesniffer": "4.0.x-dev",
        "symfony/var-dumper": "^6.4",
        "theseer/phpdox": "dev-master",
        "vimeo/psalm": "4.x-dev"
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
